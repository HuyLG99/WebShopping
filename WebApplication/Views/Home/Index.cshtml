<div class="box">
    <div>
        <h1 class="title_module"><span>New Products</span></h1>
        <div class="box-content">


            @for (int i = 0; i < Model.Count; i++)
            {
                if (i % 4 != 3)
                {
                    <div class="box-product">
                        <a class="image" href="@Url.Action("DetailProduct","Category",new { id=Model[i].Id})" title="View more"> <img src="@Model[i].ImageLink" width="220" height="220" alt=""> </a>
                        <h3 style="text-align:center"><a href="@Url.Action("Details","Product",new {ProductID=Model[i].Id })">@Model[i].Name</a></h3>
                        <p class="wrap_price">  <span class="price">@Model[i].Price</span> </p>
                        <p class="submit">
                            <input type="button" value="Add to Cart" class="btn btn-default add-to-cart" data-id="@Model[i].Id">
                        </p>
                        <div class="desc">
                        </div>
                    </div>
                }
                else
                {
                    if (i != Model.Count)
                    {
                        <div class="box-product last-item">
                            <a class="image" href="@Url.Action("DetailProduct","Category",new { id=Model[i].Id})" title="View more"> <img src="@Model[i].ImageLink" width="220" height="220" alt=""></a>
                            <h3 style="text-align:center"><a href="@Url.Action("Details","Product",new {ProductID=Model[i].Id })">@Model[i].Name</a></h3>
                            <p class="wrap_price">  <span class="price">@Model[i].Price</span> </p>
                            <p class="submit">
                                <input type="button" value="Add to Cart" class="button">
                            </p>
                        </div>

                        @Html.Raw("</div>")
                        @Html.Raw("<div class='box - content'>")

                    }
                }









            }






        </div>



    </div>

</div>




<div class="box">
    <div>
        <h1 class="title_module"><span>Sale Products</span></h1>
        <div class="box-content">

            @foreach (var pro in SaleProduct)
